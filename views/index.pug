extends layouts/main-layout.pug 

block content
                
                div#demo.carousel.slide(data-bs-ride="carousel")

                   
                    div.carousel-indicators
                        button(type="button" data-bs-target="#demo" data-bs-slide-to="0").active
                        button(type="button" data-bs-target="#demo" data-bs-slide-to="1")
                        button(type="button" data-bs-target="#demo" data-bs-slide-to="2")
                    

                   
                    div.carousel-inner
                        div.carousel-item.active
                            img(src="/img/slide-1.jpg").d-block.img-width 
                        
                        div.carousel-item
                            img(src="/img/slide-2.jpg").d-block

                        div.carousel-item
                            img(src="/img/slide-3.jpg").d-block

                    button.carousel-control-prev(type="button" data-bs-target="#demo" data-bs-slide="prev")
                        span.carousel-control-prev-icon
                    
                    button.carousel-control-next(type="button" data-bs-target="#demo" data-bs-slide="next")
                        span.carousel-control-next-icon
                    
              

                div.row
                    each product in products
                        div.col-md-4.my-3
                            div.card
                                img(src=`/img/${product.image}` alt=`${product.description}`).card-img-top 
                                div.card-body
                                    h4.card-title
                                        a(href="") #{product.name}
                                    
                                    p.card-text.pt-2 #{product.description}
                                    
                                
                                div.card-footer
                                    small.text-muted 
                                    i.fa.fa-try #{product.price}
                                    a(href="").btn.btn-secondary.btn-sm.float-right
                                        i.fa.fa-angle-double-right Details
                                
                            
                    