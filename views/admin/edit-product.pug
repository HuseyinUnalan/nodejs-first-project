extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content

  
        form(action="/admin/products" method="POST")

            input(type="hidden" name="id" value=`${product._id}`)

            div.form-group.row
                label(for="name").col-form-label Product Name 
                    div.col-sm-10
                        input.form-control#name(type="text" name="name" value=`${product.name}`)

            div.form-group.row
                label(for="price").col-form-label Price 
                    div.col-sm-10
                        input.form-control#price(type="text" name="price" value=`${product.price}`)

            div.form-group.row
                label(for="imageUrl").col-form-label Image 
                    div.col-sm-10
                        input.form-control#imageUrl(type="text" name="imageUrl" value=`${product.imageUrl}`)
            
